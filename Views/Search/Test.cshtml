@{
    ViewData["Title"] = "Search Test";
}

<!DOCTYPE html>
<html>
<head>
    <title>Search Test</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
    <div class="container">
        <h2>Search Test Page</h2>
        
        <div class="mb-3">
            <input type="text" id="searchInput" class="form-control" placeholder="Enter search query" value="product">
            <button id="searchBtn" class="btn btn-primary mt-2">Search</button>
        </div>
        
        <div id="loading" style="display: none;">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            Searching...
        </div>
        
        <div id="results"></div>
        <div id="errors"></div>
    </div>

    <script>
        $(document).ready(function() {
            console.log('jQuery loaded:', typeof $);
            
            $('#searchBtn').click(function() {
                const query = $('#searchInput').val().trim();
                console.log('Search query:', query);
                
                if (!query) {
                    alert('Please enter a query');
                    return;
                }
                
                $('#loading').show();
                $('#results').empty();
                $('#errors').empty();
                
                const requestData = { query: query };
                console.log('Request data:', requestData);
                
                $.ajax({
                    url: '/search/execute',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(requestData),
                    success: function(response) {
                        console.log('Success response:', response);
                        $('#results').html(`
                            <div class="alert alert-success">
                                <h5>Search Result:</h5>
                                <pre>${JSON.stringify(response, null, 2)}</pre>
                                <hr>
                                <div>${response.result}</div>
                            </div>
                        `);
                    },
                    error: function(xhr, status, error) {
                        console.error('Error:', error);
                        console.error('Status:', status);
                        console.error('Response:', xhr.responseText);
                        
                        $('#errors').html(`
                            <div class="alert alert-danger">
                                <h5>Error:</h5>
                                <p>Status: ${status}</p>
                                <p>Error: ${error}</p>
                                <p>Response: ${xhr.responseText}</p>
                            </div>
                        `);
                    },
                    complete: function() {
                        $('#loading').hide();
                    }
                });
            });
            
            // Test on page load
            $('#searchBtn').click();
        });
    </script>
</body>
</html>
