@{
    ViewData["Title"] = "AI Search - Simple";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AI Search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .glass-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }
        .search-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
        }
        .btn-glow {
            box-shadow: 0 0 20px rgba(102, 126, 234, 0.5);
            transition: all 0.3s ease;
        }
        .btn-glow:hover {
            box-shadow: 0 0 30px rgba(102, 126, 234, 0.8);
            transform: translateY(-2px);
        }
        .loading-spinner {
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top: 3px solid #fff;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            animation: spin 1s linear infinite;
            display: inline-block;
            margin-right: 10px;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .result-content {
            line-height: 1.7;
            color: #333;
        }
        .result-content strong {
            color: #2563eb;
        }
    </style>
</head>
<body>
    <div class="container-fluid py-5">
        <div class="search-container">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="text-white mb-3">
                    <i class="fas fa-robot me-3"></i>
                    AI Product Search
                </h1>
                <p class="text-white-50">Find the perfect products with AI-powered recommendations</p>
            </div>

            <!-- Search Box -->
            <div class="glass-card p-4 mb-4">
                <div class="d-flex flex-column gap-3">
                    <textarea 
                        id="searchQuery" 
                        class="form-control border-0 bg-white bg-opacity-75" 
                        rows="3" 
                        placeholder="What's the best gift for my 12-year-old daughter?"
                        style="resize: none; border-radius: 15px; font-size: 1.1rem;"></textarea>
                    
                    <div class="d-flex gap-2 justify-content-center">
                        <button id="searchBtn" class="btn btn-primary btn-glow px-4 py-2" style="border-radius: 25px;">
                            <i class="fas fa-search me-2"></i>
                            Search Products
                        </button>
                        <button id="clearBtn" class="btn btn-outline-light px-4 py-2" style="border-radius: 25px;">
                            <i class="fas fa-times me-2"></i>
                            Clear
                        </button>
                    </div>
                </div>
            </div>

            <!-- Loading -->
            <div id="loading" class="text-center text-white py-4" style="display: none;">
                <div class="loading-spinner"></div>
                <span>Searching for the perfect products...</span>
            </div>

            <!-- Results -->
            <div id="results"></div>
        </div>
    </div>

    <script>
        console.log('Simple search page loaded');
        
        document.addEventListener('DOMContentLoaded', function() {
            const searchBtn = document.getElementById('searchBtn');
            const clearBtn = document.getElementById('clearBtn');
            const searchQuery = document.getElementById('searchQuery');
            const loading = document.getElementById('loading');
            const results = document.getElementById('results');

            // Search button click
            if (searchBtn) {
                searchBtn.addEventListener('click', performSearch);
            }

            // Clear button click
            if (clearBtn) {
                clearBtn.addEventListener('click', function() {
                    if (searchQuery) {
                        searchQuery.value = '';
                        searchQuery.focus();
                    }
                    if (results) {
                        results.innerHTML = '';
                    }
                });
            }

            // Enter key handler
            if (searchQuery) {
                searchQuery.addEventListener('keydown', function(e) {
                    if (e.ctrlKey && e.keyCode === 13) {
                        performSearch();
                    }
                });
            }

            function performSearch() {
                console.log('performSearch called');
                
                const query = searchQuery ? searchQuery.value.trim() : '';
                
                if (!query) {
                    alert('Please enter a search query');
                    if (searchQuery) searchQuery.focus();
                    return;
                }

                console.log('Searching for:', query);

                // Show loading
                if (loading) loading.style.display = 'block';
                if (results) results.innerHTML = '';
                if (searchBtn) searchBtn.disabled = true;

                // Make search request
                fetch('/search/execute', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ query: query })
                })
                .then(response => {
                    console.log('Response status:', response.status);
                    if (!response.ok) {
                        return response.text().then(text => {
                            throw new Error(`HTTP ${response.status}: ${text}`);
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Search response:', data);
                    displayResults(data, query);
                })
                .catch(error => {
                    console.error('Search error:', error);
                    displayError(error.message);
                })
                .finally(() => {
                    // Hide loading
                    if (loading) loading.style.display = 'none';
                    if (searchBtn) searchBtn.disabled = false;
                });
            }

            function displayResults(response, query) {
                if (!results) return;

                let content = '';
                
                if (response.success && response.result) {
                    content = `
                        <div class="glass-card p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary rounded-circle p-2 me-3">
                                    <i class="fas fa-robot text-white"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0 text-white">AI Assistant</h5>
                                    <small class="text-white-50">Product Recommendations</small>
                                </div>
                            </div>
                            
                            <div class="alert alert-light mb-3">
                                <i class="fas fa-quote-left me-2"></i>
                                <strong>Your Query:</strong> "${query}"
                            </div>
                            
                            <div class="bg-white bg-opacity-90 p-4 rounded-3">
                                <div class="result-content">
                                    ${response.result.replace(/\n/g, '<br>')}
                                </div>
                            </div>
                            
                            <div class="mt-3 text-center">
                                <small class="text-white-50">
                                    <i class="fas fa-cog me-1"></i>
                                    Powered by Azure Cognitive Search & OpenAI
                                </small>
                            </div>
                        </div>
                    `;
                } else {
                    content = `
                        <div class="glass-card p-4">
                            <div class="alert alert-warning mb-0">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>No Results:</strong> ${response.error || 'No results found for your query.'}
                            </div>
                        </div>
                    `;
                }

                results.innerHTML = content;
                
                // Smooth scroll to results
                setTimeout(() => {
                    results.scrollIntoView({ 
                        behavior: 'smooth',
                        block: 'start'
                    });
                }, 100);
            }

            function displayError(errorMessage) {
                if (!results) return;
                
                results.innerHTML = `
                    <div class="glass-card p-4">
                        <div class="alert alert-danger mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Search Error:</strong> ${errorMessage}
                        </div>
                    </div>
                `;
            }
        });
    </script>
</body>
</html>
