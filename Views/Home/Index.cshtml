@{
    ViewData["Title"] = "Welcome";
}

<div class="container mt-5">
    <div class="row justify-content-center min-vh-75 align-items-center">
        <div class="col-lg-8 col-md-10">
            <div class="search-container text-center">
                <!-- Hero Section -->
                <div class="hero-section mb-5">
                    <div class="hero-icon mb-4">
                        <i class="fas fa-robot"></i>
                    </div>
                    <h1 class="hero-title mb-3">
                        Welcome to Retail AI Assistant
                    </h1>
                    <p class="hero-subtitle mb-4">
                        Your intelligent shopping companion powered by advanced AI technology.
                        Find the perfect products with natural language search.
                    </p>
                    
                    <!-- Features Grid -->
                    <div class="features-grid mb-5">
                        <div class="feature-card">
                            <i class="fas fa-search"></i>
                            <h5>Smart Search</h5>
                            <p>Natural language product discovery</p>
                        </div>
                        <div class="feature-card">
                            <i class="fas fa-brain"></i>
                            <h5>AI Reasoning</h5>
                            <p>Intelligent recommendation engine</p>
                        </div>
                        <div class="feature-card">
                            <i class="fas fa-lightning-bolt"></i>
                            <h5>Real-time</h5>
                            <p>Instant results and responses</p>
                        </div>
                    </div>
                    
                    <!-- CTA Button -->
                    <a asp-controller="Search" asp-action="Index" class="btn btn-cta">
                        <i class="fas fa-rocket me-2"></i>
                        Start Shopping Now
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    
                    <!-- Quick Examples -->
                    <div class="quick-examples mt-4">
                        <p class="text-white-50 mb-3">Try asking:</p>
                        <div class="example-pills">
                            <span class="example-pill">"Best gifts for teenagers"</span>
                            <span class="example-pill">"Laptops under $1000"</span>
                            <span class="example-pill">"Eco-friendly products"</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .min-vh-75 {
        min-height: 75vh;
    }
    
    .hero-section {
        padding: 2rem 0;
    }
    
    .hero-icon {
        font-size: 4rem;
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .hero-title {
        font-size: 3rem;
        font-weight: 700;
        background: linear-gradient(135deg, #fff, #f8f9fa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1.2;
    }
    
    .hero-subtitle {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto;
    }
    
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin: 3rem 0;
    }
    
    .feature-card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 2rem 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.15);
        box-shadow: var(--shadow-medium);
    }
    
    .feature-card i {
        font-size: 2.5rem;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 1rem;
    }
    
    .feature-card h5 {
        color: white;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .feature-card p {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
        margin: 0;
    }
    
    .btn-cta {
        background: var(--accent-gradient);
        color: white;
        border: none;
        border-radius: 16px;
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-light);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }
    
    .btn-cta:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-heavy);
        color: white;
    }
    
    .quick-examples {
        margin-top: 3rem;
    }
    
    .example-pills {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.5rem;
    }
    
    .example-pill {
        background: rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.8);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .example-pill:hover {
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }
    
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }
        
        .hero-subtitle {
            font-size: 1.1rem;
        }
        
        .features-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        
        .example-pills {
            flex-direction: column;
            align-items: center;
        }
    }
</style>
